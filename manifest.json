{
  "name": "Granottifier",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "This extension prettifies Granot Moving Software by integrating (some) Google services",
  "homepage_url": "https://github.com/mradenovic/granoogle",
  "icons": {
    "16": "icons/mover16.png",
    "48": "icons/mover48.png",
    "128": "icons/mover128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "https://*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*mpest~entrywc*",
        "http://*/*mpest~entrywc*"
      ],
      "css": ["css/maps.css"],
      "js": [
        "entry_form.js"
      ]
    },
    {
      "matches": [
        "https://*/*mpcharge~chargeswc*",
        "http://*/*mpcharge~chargeswc*"
      ],
      "css": ["css/gmail.css"],
      "js": [
        "jquery-2.1.4.min.js",
        "charges.js"
      ]
    },
     {
      "matches": [
        "https://*/*mpest~extstopwc*",
        "http://*/*mpest~extstopwc*"
      ],
      "css": ["css/maps.css"],
      "js": [
        "jquery-2.1.4.min.js",
        "extra_stop.js"
      ]
    }
 ],
  "web_accessible_resources": [
    "entry_form_maps.js",
    "extra_stop_maps.js"
  ]
}