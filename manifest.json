{
  "name": "Granoogle : Granot + Google",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "This extension integrates Granot Moving Software with (some) Google services",
  "homepage_url": "http://praqtiq.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "https://*/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*mpest~entrywc*",
        "http://*/*mpest~entrywc*"
      ],
      "css": ["css/maps.css"],
      "js": [
        "load_maps_api.js"
      ]
    },
    {
      "matches": [
        "https://*/*mpcharge~chargeswc*",
        "http://*/*mpcharge~chargeswc*"
      ],
      "css": ["css/gmail.css"],
      "js": [
        "gmail_integration.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "maps_api.js"
  ]
}